<UserControl x:Class="P4VHelper.Customize.Control.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:P4VHelper.Customize.Control"
             xmlns:r="clr-namespace:P4VHelper.Resource"
             xmlns:p="clr-namespace:P4VHelper.Customize.Property"
             xmlns:c="clr-namespace:P4VHelper.Customize.Converter"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Style/ImageButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <c:PackUrlImageSourceConverter x:Key="PackUrlImageSourceConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="30"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--소스 설정을 해야 알림을 받음-->
            <TextBlock x:Name="_tbTitle" Text="{Binding Title, RelativeSource={RelativeSource  AncestorType={x:Type local:TitleBar}}}" VerticalAlignment="Center"
                       Margin="5, 0, 0, 0">
            </TextBlock>
            <ContentControl Grid.Column="1" 
                            Padding="0"
                            Height="25"
                            VerticalAlignment="Center"
                            Background="Aquamarine"
                            Margin="{Binding TitleContentMargin}" 
                            Content="{Binding TitleContent}" 
                            ContentTemplate="{Binding TitleContentTemplate}">
            </ContentControl>

            <Button Grid.Column="2" Click="PinOnClick">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ImageButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Topmost, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                                         Value="True">
                                <Setter Property="p:ImageSourceProperty.Image" Value="{
                                        Binding 
                                        Converter={StaticResource PackUrlImageSourceConverter},
                                        ConverterParameter={x:Static r:R.ICON_UNPIN_KEY}}">
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Topmost, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                                         Value="False">
                                <Setter Property="p:ImageSourceProperty.Image" Value="{
                                        Binding 
                                        Converter={StaticResource PackUrlImageSourceConverter},
                                        ConverterParameter={x:Static r:R.ICON_PIN_KEY}}">
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Grid.Column="3" 
                    Style="{StaticResource ImageButton}" 
                    Click="MinimizeOnClick"
                    p:ImageSourceProperty.Image="{
                Binding 
                Converter={StaticResource PackUrlImageSourceConverter},
                ConverterParameter={x:Static r:R.ICON_MINIMIZE_KEY}}">
            </Button>
            <Button Grid.Column="4" 
                    Style="{StaticResource ImageButton}" 
                    Click="MaximizeOnClick"
                    p:ImageSourceProperty.Image="{
                Binding 
                Converter={StaticResource PackUrlImageSourceConverter},
                ConverterParameter={x:Static r:R.ICON_MAXIMIZE_KEY}}">
            </Button>
            <Button Grid.Column="5" 
                    Style="{StaticResource ImageButton}" 
                    Click="CloseOnClick"
                    p:ImageSourceProperty.Image="{
                Binding 
                Converter={StaticResource PackUrlImageSourceConverter},
                ConverterParameter={x:Static r:R.ICON_CLOSE_KEY}}">
            </Button>
        </Grid>
    </StackPanel>
</UserControl>